<h1>All Categories</h1>
<%= link_to "New Category", new_category_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="d-flex">
            <%= link_to "View", category_path(category), class: "btn btn-info btn-sm me-2" %>
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning btn-sm" %>
            <%= button_to "Delete", category_path(category), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", style: "margin-left: 0.5rem;" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
