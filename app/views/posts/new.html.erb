<h1>New Post</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.select :category_id, @categories.map { |c| [c.name, c.id] }, { prompt: "Select a category" }, class: "form-select" %>
  </div>

  <div class="mb-3 form-check">
    <%= form.check_box :liked, class: "form-check-input" %>
    <%= form.label :liked, "Liked", class: "form-check-label" %>
  </div>

  <%= form.submit "Create Post", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to All Posts", posts_path, class: "btn btn-secondary mt-3" %>
